@model YourSneaker.WebApp.MVC.Models.UsuarioViewModel.UsuarioLogin

@{
    Layout = "";
    ViewData["Title"] = "Entrar";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewData["Title"] - Your Sneakers </title>

    <!-- Styles -->
    @await Html.PartialAsync("_Styles")

    <!-- Theme Styles -->
    @await Html.PartialAsync("_StylesTheme")
    
</head>
<body>
    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background">
        </div>
        <div class="app-auth-container">
            <div class="logo">
                 <a asp-action="Index" asp-controller="Catalogo" class="brand-wrap"></a>
            </div>
            <p class="auth-description">Seja bem vindo! <br />Por favor, informe seus dados de acesso e boa sorte!</p>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Login">
                
                <div class="auth-credentials m-b-xxl">
                    
                    <vc:Summary></vc:Summary>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" asp-for="Email" placeholder="">
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Senha" type="password" class="form-control" placeholder="">
                        <label asp-for="Senha" class="form-label">Password</label>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>



                <div class="auth-submit">
                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                </div>
                <br/>
                <div class="card-footer text-center">Ainda não tem uma conta?<a asp-controller="Identidade" asp-action="Registro"> Criar uma conta</a></div>

            </form>
            
            
        </div>
    </div>

    <!-- Javascripts -->
    @await Html.PartialAsync("_Scripts")
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>