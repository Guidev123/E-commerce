@using YourSneaker.WebApp.MVC.Extensions
@model YourSneaker.WebApp.MVC.Models.PedidoTransacaoViewModel
<hr/>
<article class="shift-right">
    <dl class="row">

        <dt class="col-sm-10">Subtotal: <span class="float-right text-muted">@Model.PedidoItems.Sum(i => i.Quantidade) itens</span></dt>
        <dd class="col-sm-2 text-right">
            <strong>@this.MoneyFormat(Model.ValorTotal + Model.Desconto)</strong>
        </dd>

        <dt class="col-sm-10">Desconto: <span class="float-right text-muted">@Model.CupomCodigo</span></dt>
        <dd class="col-sm-2 text-danger text-right">
            <strong>@this.MoneyFormat(Model.Desconto)</strong>
        </dd>

        <dt class="col-sm-10">Total:</dt>
        <dd class="col-sm-2 text-right">
            <strong class="h5">@this.MoneyFormat(Model.ValorTotal)</strong>
        </dd>
    </dl>
</article>